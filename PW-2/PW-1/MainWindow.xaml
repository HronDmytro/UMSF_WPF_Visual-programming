<Window x:Class="PW_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Анімація фігур" Width="800" Height="600">
    <Grid>
        <Canvas Name="canvas" Background="LightGray">

            <Polygon Name="triangle" Points="0,0 40,0 20,40" Fill="Blue" Visibility="Collapsed" Canvas.Left="50" Canvas.Top="50"/>

            <Rectangle Name="rectangle" Width="40" Height="40" Fill="Green" Visibility="Collapsed" Canvas.Left="200" Canvas.Top="50"/>

            <Ellipse Name="circle" Width="40" Height="40" Fill="Red" Visibility="Collapsed" Canvas.Left="350" Canvas.Top="200"/>

            <Polygon Name="pyramid" Points="0,0 20,40 40,0 60,40" Fill="Orange" Visibility="Collapsed" Canvas.Left="500" Canvas.Top="50"/>

        </Canvas>
    </Grid>
</Window>
